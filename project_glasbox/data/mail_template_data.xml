<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="task_completion_email_template_glasbox" model="mail.template">
            <field name="name">Project Task: Current task ready </field>
            <field name="model_id" ref="project_glasbox.model_project_task"/>
            <field name="email_to">${object.user_id.email_formatted | safe}</field>
            <field name="subject">Task ${object.name} is Ready</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.user_id.name},
                        <br /> <br />
                        Previous task has been completed.
                        <br /> <br />
                        Task ${object.name} is Ready to Start.
                        <br /><br />
                        <div t-if="'task_url' in object.task_url" style="padding: 16px 8px 16px 8px;">
                            <a t-att-href="object.task_url"
                                style="background-color: #875a7b; text-decoration: none; color: #fff; padding: 8px 16px 8px 16px; border-radius: 5px;">View Task</a>
                        </div>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
